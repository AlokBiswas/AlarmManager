<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:padding="10dp">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="5dp">

           <Button
               android:id="@+id/btn_setTime"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Set Time"/>

           <TextView
               android:id="@+id/tv_setTime"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="--:--"
               style="@style/TextAppearance.AppCompat.Headline"/>
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="5dp">

           <Button
               android:id="@+id/btn_setDate"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Set Date"/>

           <TextView
               android:id="@+id/tv_setDate"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="dd/MM/yyyy"
               style="@style/TextAppearance.AppCompat.Headline"/>
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="5dp">

           <Button
               android:id="@+id/btn_IsiPesan"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Isi Pesan"/>

          <EditText
              android:id="@+id/et_message"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text=""
              style="@style/TextAppearance.AppCompat.Headline"/>
       </LinearLayout>
   </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btn_setAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Alarm"/>
        <Button
            android:id="@+id/btn_cancelAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel Alarm"/>



    </LinearLayout>

</LinearLayout>